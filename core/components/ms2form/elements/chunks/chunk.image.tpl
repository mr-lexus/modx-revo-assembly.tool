<div class="ticket-file" data-product-id="[[+product_id]]" data-id="[[+id]]">
	<a href="[[+url]]" class="ticket-file-link" title="[[+file]]" target="_blank">
		<div class="ticket-file-image-wrapper">
			<img src="[[+thumb]]" class="ticket-file-image" />
		</div>
	</a>
	<div class="ticket-file-meta">
		<a href="#" class="ms2-file-delete">[[%ms2form_file_delete]]</a>
		<br/>
		<a href="#" class="ms2-file-insert">[[%ms2form_file_insert]]</a>
	</div>
	<div class="ticket-file-template">
		<a href="[[+url]]" title="[[+name]]">
			<img src="[[+thumb]]" />
		</a>
	</div>
</div>
